<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.renevue.AddRenevueActivity"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm khoản thu"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FF0000"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên loại thu"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"/>
    <AutoCompleteTextView
        android:id="@+id/auto_renevue_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:hint="Loại thu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edt_renevue_add_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tiền"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghi chú"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edt_renevue_add_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ghi chú"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian"
        android:textSize="24dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edt_renevue_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời gian"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="80dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_renevue_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"/>
        <Button
            android:id="@+id/btn_renevue_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>