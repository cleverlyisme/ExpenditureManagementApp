<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/renevue_type_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_money"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/renevue_type_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thưởng"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/renevue_type_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_edit"
            android:layout_toStartOf="@+id/renevue_type_item_delete"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/renevue_type_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>