<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.revenue.RevenueDetailFragment"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add revenue"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FF0000"
        android:layout_marginTop="15dp"/>
    <AutoCompleteTextView
        android:id="@+id/auto_revenue_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:hint="Revenue type"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/edt_revenue_add_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="number"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/edt_revenue_add_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Note"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/edt_revenue_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thá»i gian"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_revenue_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/btn_revenue_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentEnd="true"/>
    </LinearLayout>

</LinearLayout>